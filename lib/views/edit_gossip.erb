    <body>

        <!--  -->
    <style>
     body {
    font-family: 'Quicksand', sans-serif;
    font-size: 20px;
    height: 100vh;
      }
   </style>

   <div class="container my-5">
      <div class="row">
        <div class="col-1">
        </div>

        <div class="col-10">

          <h1>Potin d'ID <%= id %></h1>
          <p> Son auteur pour le moment : <%= gossip[0] %> </p>
          <p> Son contenu pour le moment : <%= gossip[1] %> </p>
          <br>

    <form action="/gossips/<%= id %>/edit/" method='POST'>
    <div class="input-group flex-nowrap my-5">

      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">Nouvel Auteur</span>
      </div>
      <input type="text" class="form-control" placeholder="<%= gossip[0] %>"" aria-label="<%= gossip[0] %>" aria-describedby="addon-wrapping" name="new_author">
    </div>

    <div class="input-group flex-nowrap my-5">
      <div class="input-group-prepend">
        <span class="input-group-text" id="addon-wrapping">Nouveau Potin</span>
      </div>
      <input type="text" class="form-control" placeholder="<%= gossip[1] %>"" aria-label="<%= gossip[1] %>" aria-describedby="addon-wrapping" name="new_content">
    </div>

    <input type="submit" class="btn"></input>
